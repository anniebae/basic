/*scoreboard styling*/
table {
  border-collapse: collapse;
  width: 80%;
	height: 60%;
  text-align: center;
}
table td, table th {
  border: 1px solid black;
  text-align: center;
}
table tr:first-child th {
  border-top: 0;
}
table tr:last-child td {
  border-bottom: 0;
}
table tr td:first-child,
table tr th:first-child {
  border-left: 0;
}
table tr td:last-child,
table tr th:last-child {
  border-right: 0;
}
/*scoreboard styling*/

