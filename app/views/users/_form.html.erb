<div class="form-container">
  <div class="row">
    <div class="col-xs-2 col-sm-3 col-md-3"></div>
    <div class="col-xs-8 col-sm-6 col-md-6">
      <div class="signup-form">
        <h1 class="new-user-form">SIGN UP.</h1>
        <%= form_for(@user) do |f| %>
        <%= f.label :username %>
        <%= f.text_field :username %>
        <br>
        <%= f.label :password %>
        <%= f.password_field :password %>
        <br>
        <%= f.label :instagram_account %>
        <%= f.text_field :instagram_account %>
        <br>
        <%= f.submit :submit %>
        <% end %>

<% if @error  %>
<span id="ig_error_msg"><%= @error %></span>
<% end %>

      </div>
    </div>
    <div class="col-xs-2 col-sm-6 col-md-3"></div> 
  </div>
</div>